@model ltracker.Models.DetailsAppUserViewModel

@{
    ViewBag.Title = "DetailsUser";
}

<h2>DetailsUser</h2>

<div>
    <h4>DetailsAppUserViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <div class="col-md-10">
            <ul>
                @foreach (var rol in Model.AssignedRoles)
                {
                    <li>@rol.Name</li>
                }
            </ul>
        </div>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditUser", new { id = Model.Id }) |
